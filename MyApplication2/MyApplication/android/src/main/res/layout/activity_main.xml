<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.MainActivity"
    android:background="#00ffcc">
 <EditText
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:id="@+id/etgomoney"
     android:layout_margin="10dp"
     android:inputType="number"
     android:hint="请输入您期望一桶金额"/>
    <!--输入框设置键盘直接转换成数子-->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈哈，通过点击鼠标轻易赚......."
        android:layout_below="@+id/textView2"
        android:textColor="#0000ff"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btngetmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#bbff00"
        android:layout_gravity="center"
        android:text="点我一次赚一元"
        android:layout_below="@+id/etgomoney"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击一次损失一元"
        android:background="#ff0000"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:layout_below="@+id/btngetmoney"
        android:layout_centerHorizontal="true" />
//gravty中意
</RelativeLayout>
